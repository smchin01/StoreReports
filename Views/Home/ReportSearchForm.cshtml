
@model List<ReportSearchModel>
@{ 
    ViewData["Title"] = "Report Search";
}

<h1>Report Search Form</h1>

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Report Search</title>
</head>

<body>
    <div id="body-content">
        <div id="search-student">
            <form asp-action="SubmitSearchDate">
                <div class="row">
                    <div class="form-group col">
                        <label for=" "DATE" class="col-sm-3 col-form-label">Date</label>
                        <input type="date" name="date" class="form-control" value="2020-01-01">
                    </div>
                    <div class="form-group col">
                        <label></label>
                        <button asp-action="SubmitSearchDate" type="submit" style="background-color: #1f4287" class="btn secondary text-light btn-block">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </div>
                </div>

                <table class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Taxable</th>
                            <th>Non Tax</th>
                            <th>Gas</th>
                            <th>Online Lotto</th>
                            <th>Instant Lotto</th>
                            <th>Paid Out Lotto</th>
                            <th>Paid Outs</th>
                            <th>Credit Card</th>
                            <th>Checks</th>
                            <th>Cash</th>
                            <th>State Tax</th>
                            <th>Total Sales</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.ReportDatum.Date.GetValueOrDefault().ToString("yyyy-MM-dd")</td>
                            <td>@item.ReportDatum.Taxable</td>
                            <td>@item.ReportDatum.NonTax</td>
                            <td>@item.ReportDatum.Gas</td>
                            <td>@item.ReportDatum.OnlineLotto</td>
                            <td>@item.ReportDatum.InstantLotto</td>
                            <td>@item.ReportDatum.PaidOutsLotto</td>
                            <td>@item.ReportDatum.PaidOuts</td>
                            <td>@item.ReportDatum.CreditCard</td>
                            <td>@item.ReportDatum.Checks</td>
                            <td>@item.ReportDatum.Cash</td>
                            <td>@item.ReportDatum.StateTax</td>
                            <td>@item.TotalSale.TotalAmount</td>
                            <td><input type="button" value="Delete" onclick="location.href='@Url.Action("DeleteDailyReport", "Home", new {date = item.ReportDatum.Date})'" /></td>
                        </tr>

                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>

    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="theme.css">
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
</body>

</html>

